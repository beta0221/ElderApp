<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="ElderApp.Views.AcademyPage"
             Title="銀髮學院">
    <ContentPage.Content>
        
        <ScrollView>
            <StackLayout Spacing="0">
                
                <ContentView HeightRequest="{Binding SliderHeight}">
                    <Image Source="http://128.199.197.142/images/slider/joy1.png"
                           Aspect="AspectFill"/>    
                </ContentView>
                
                <ContentView Padding="12,12,12,0" HeightRequest="180">
                    <Button Text="活動行事曆" BackgroundColor="#F6A723" TextColor="White"
                            Command="{Binding Events}"/>
                </ContentView>
                
                <ContentView Padding="12,12,12,0" HeightRequest="180">
                    <Button Text="我的活動" BackgroundColor="#F6A723" TextColor="White"
                            Command="{Binding My_events}"/>
                </ContentView>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
