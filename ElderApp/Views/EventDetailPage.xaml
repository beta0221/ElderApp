<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="ElderApp.Views.EventDetailPage">
    <ContentPage.Content>
        <TableView>
            <TableRoot>
                <TableSection Title="title">
                    <ViewCell>
                        <StackLayout>
                            <Image Source="{Binding Select_event.image_url}"/>
                        </StackLayout>
                    </ViewCell>

                    <ViewCell>
                        <StackLayout>
                            <Label Text="{Binding Select_event.title}"/>
                        </StackLayout>
                    </ViewCell>
                </TableSection>

                <TableSection Title="body">
                    <ViewCell>
                        <StackLayout>
                            <Label Text="{Binding Select_event.body}"/>
                        </StackLayout>
                    </ViewCell>
                    <ViewCell>
                        <StackLayout>
                            <Label Text="{Binding Select_event.location}"/>
                        </StackLayout>
                    </ViewCell>
                    <ViewCell>
                        <StackLayout>
                            <Label Text="{Binding Select_event.deadline}"/>
                        </StackLayout>
                    </ViewCell>
                    <ViewCell>
                        <StackLayout>
                            <Label Text="{Binding Select_event.dateTime}"/>
                        </StackLayout>
                    </ViewCell>
                </TableSection>
            </TableRoot>
        </TableView>
    </ContentPage.Content>
</ContentPage>
