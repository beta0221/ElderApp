<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"

    x:Class="ElderApp.Views.EventPage">
    
    <!--xmlns:local="clr-namespace:ElderApp.ViewModels"-->
    

    <ContentPage.Content>
        <StackLayout>
            <StackLayout Orientation="Horizontal" BackgroundColor="#47ADE8">
                <Label Text="活動地區:" VerticalOptions="Center" HorizontalOptions="Center"/>
                <Picker Title="篩選地區" BackgroundColor="#47ADE8">
                    <Picker.Items>
                        <x:String>桃園</x:String>
                        <x:String>中壢</x:String>
                    </Picker.Items>
                </Picker>
                <Label Text="活動類別:" VerticalOptions="Center" HorizontalOptions="Center"/>
                <Picker Title="篩選類別"
                        BackgroundColor="#47ADE8"
                        ItemsSource="{Binding Categories}"
                        ItemDisplayBinding="{Binding name}"
                        SelectedItem="{Binding SelectCategory}"/>
                    
            </StackLayout>
            
            <SearchBar Placeholder="搜尋活動" Text="{Binding SearchEvent,Mode=TwoWay}"/>
            <ListView x:Name="listview" ItemsSource="{Binding Events}"
                      HasUnevenRows="True"
                      IsPullToRefreshEnabled="True"
                      RefreshCommand="{Binding RefreshCommand}"
                      IsRefreshing="{Binding IsRefreshing}"
                      SelectedItem="{Binding SelectEvent,Mode=TwoWay}"
                      >

                

            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Orientation="Horizontal" Padding="5" x:Name="item" BackgroundColor="#47ADE8">
                            <!--<Image Source="{Binding image_url}"></Image>-->
                            <Image Source="http://127.0.0.1:8000/images/users/3/1565881035.png"
                                   HeightRequest="100"
                                   WidthRequest="100"
                                   HorizontalOptions="Start"
                                   Aspect="AspectFill"/>
                            <StackLayout VerticalOptions="Center" BackgroundColor="#47ADE8">
                                <Label Text="{Binding title}" />
                               
                                <Label Text="活動時間:"/>
                                    <Label Text="{Binding dateTime}"/>
                                <Label Text="活動地點:"/>
                                    <Label Text="{Binding location}"/>
                                <Label Text="報名截止時間:"/>
                                    <Label Text="{Binding deadline}"/>
                                
                            </StackLayout>

                            <Label Text="{Binding participate_text,Mode=TwoWay}"
                                       TextColor="{Binding participate_color,Mode=TwoWay}"
                                   HorizontalOptions="EndAndExpand"
                                   VerticalOptions="Center"/>
                            
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        </StackLayout>
        
    </ContentPage.Content>
</ContentPage>