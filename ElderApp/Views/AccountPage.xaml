<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="ElderApp.Views.AccountPage"
             Padding="20">
    <ContentPage.Content>
        <StackLayout>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="2.4*" />
            </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            
            <StackLayout Grid.Row="0" Grid.Column="0">
                <Label HeightRequest="20" Text="姓名："></Label>
                <Label HeightRequest="20" Text="帳號："></Label>
                <Label HeightRequest="20" Text="性別："></Label>
                <Label HeightRequest="20" Text="生日："></Label>
                <Label HeightRequest="20" Text="手機："></Label>
                <Label HeightRequest="20" Text="住家電話："></Label>
                <Label HeightRequest="20" Text="地址："></Label>
                <Label HeightRequest="20" Text="身分證號："></Label>
                <Label HeightRequest="20" Text="會員資格："></Label>
                <Label HeightRequest="20" Text="會員效期："></Label>
                
            </StackLayout>
            <StackLayout Grid.Row="0" Grid.Column="1">
                <Label HeightRequest="20" Text="{Binding Name}"></Label>
                <Label HeightRequest="20" Text="{Binding Account}"></Label>
                <Label HeightRequest="20" Text="{Binding Gender}"></Label>
                <Label HeightRequest="20" Text="{Binding Birthdate}"></Label>
                <Label HeightRequest="20" Text="{Binding Phone}"></Label>
                <Label HeightRequest="20" Text="{Binding Tel}"></Label>
                <Label HeightRequest="20" Text="{Binding Address}"></Label>
                <Label HeightRequest="20" Text="{Binding Id_number}"></Label>
                <Label HeightRequest="20" Text="{Binding Valid}"></Label>
<!--                <Label Text="{Binding Name}"></Label>-->
            </StackLayout>
            
            
        </Grid>
        
            <Button Text="修改資料" BackgroundColor="Gray" TextColor="White" Margin="0,5,0,5" />
            <Button Text="申請續會" BackgroundColor="Green" TextColor="White" Margin="0,5,0,5" />
        </StackLayout>
        
    </ContentPage.Content>
</ContentPage>
