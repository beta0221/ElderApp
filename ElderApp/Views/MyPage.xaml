<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ElderApp.Views.MyPage"
             Title="銀髮學院">
    
    <ContentPage.Content>
        
        <ScrollView>
            
            <StackLayout Spacing="0">
                <ContentView BackgroundColor="#F6A723" HeightRequest="180">
                    <Grid Padding="12,12,0,12">
                        <Grid.RowDefinitions>
                            <RowDefinition Height=".25*"/>
                            <RowDefinition Height=".25*"/>
                            <RowDefinition Height=".25*"/>
                            <RowDefinition Height=".25*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="156"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <Image x:Name="UserImage" 
                           Source="{Binding Image_url,Mode=TwoWay}"
                           Grid.Row="0" 
                           Grid.Column="0"
                           Grid.RowSpan="4"
                           Aspect="AspectFill"/>
                        <ContentView Grid.Row="0" Grid.Column="1" Padding="8,0,0,0">
                            <StackLayout Orientation="Horizontal" Spacing="0">
                                <Label Text="姓名:" FontSize="Large" TextColor="White" VerticalTextAlignment="Center"/>        
                                <Label Text="{Binding User.Name,Mode=TwoWay}" FontSize="Large" TextColor="White" VerticalTextAlignment="Center"/>
                            </StackLayout>
                        </ContentView>
                        
                        <ContentView Grid.Row="1" Grid.Column="1" Padding="12,0,0,0">
                            <StackLayout Orientation="Horizontal" Spacing="0">
                                <Label Text="帳號:" TextColor="White" VerticalTextAlignment="Center"/>        
                                <Label Text="{Binding User.Email,Mode=TwoWay}" TextColor="White" VerticalTextAlignment="Center"/>
                            </StackLayout>
                        </ContentView>
                        
                        <ContentView Grid.Row="2" Grid.Column="1" Padding="12,0,0,0">
                            <StackLayout Orientation="Horizontal" Spacing="0">
                                <Label Text="榮譽等級:" TextColor="White" VerticalTextAlignment="Center"/>        
                                <Label Text="{Binding Rank,Mode=TwoWay}" TextColor="White" VerticalTextAlignment="Center"/>
                            </StackLayout>
                        </ContentView>
                        
                        <ContentView Grid.Row="3" Grid.Column="1" Padding="12,0,0,0">
                            <StackLayout Orientation="Horizontal" Spacing="0">
                                <Label Text="剩餘樂幣:" TextColor="White" VerticalTextAlignment="Center"/>        
                                <Label Text="{Binding Wallet,Mode=TwoWay}" TextColor="White" VerticalTextAlignment="Center"/>
                            </StackLayout>
                        </ContentView>
                        
                        
                        
                    </Grid>
                </ContentView>
                
                <ContentView BackgroundColor="White" HeightRequest="{Binding SliderHeight}">
                    
                    <WebView Source="http://128.199.197.142/slider.html"/>
                </ContentView>
                
                <ContentView HeightRequest="{Binding SquareHeight}" BackgroundColor="White">
                    <Grid RowSpacing="0" ColumnSpacing="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width=".5*"/>
                            <ColumnDefinition Width=".5*"/>
                        </Grid.ColumnDefinitions>
                        
                        <ContentView Grid.Row="0" Grid.Column="0" Margin="12,12,6,6">
                            <AbsoluteLayout>
                                <BoxView AbsoluteLayout.LayoutFlags="All" AbsoluteLayout.LayoutBounds="0,0,1,1" BackgroundColor="Silver" CornerRadius="4"/>
                                <Grid RowSpacing="0" ColumnSpacing="0"  AbsoluteLayout.LayoutFlags="All" AbsoluteLayout.LayoutBounds="0.5,0.5,1,.8">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="30"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <ImageButton Grid.Row="0" Grid.Column="0" Source="btn_take.png" Command="{Binding TakeMoney}"/>
                                    <Label Grid.Row="1" Grid.Column="0" Text="收樂幣" TextColor="White" FontSize="Large" HorizontalTextAlignment="Center"/>
                                </Grid>
                            </AbsoluteLayout>
                        </ContentView>
                        
                        <ContentView Grid.Row="0" Grid.Column="1" Margin="6,12,12,6">
                            <AbsoluteLayout>
                                <BoxView AbsoluteLayout.LayoutFlags="All" AbsoluteLayout.LayoutBounds="0,0,1,1" BackgroundColor="Silver" CornerRadius="4"/>
                                <Grid RowSpacing="0" ColumnSpacing="0"  AbsoluteLayout.LayoutFlags="All" AbsoluteLayout.LayoutBounds="0.5,0.5,1,.8">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="30"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <ImageButton Grid.Row="0" Grid.Column="0" Source="btn_give.png" Command="{Binding GiveMoney}"/>
                                    <Label Grid.Row="1" Grid.Column="0" Text="送樂幣" TextColor="White" FontSize="Large" HorizontalTextAlignment="Center"/>
                                </Grid>
                            </AbsoluteLayout>
                        </ContentView>
                        
                    </Grid>
                </ContentView>
                
                
                
                <ContentView HeightRequest="{Binding SquareHeight}" BackgroundColor="White">
                    
                    
                    
                    
                    
                    
                   <Grid RowSpacing="0" ColumnSpacing="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width=".5*"/>
                            <ColumnDefinition Width=".5*"/>
                        </Grid.ColumnDefinitions>
                        
                        <ContentView Grid.Row="0" Grid.Column="0" Margin="12,6,6,12">
                            <AbsoluteLayout>
                                <BoxView AbsoluteLayout.LayoutFlags="All" AbsoluteLayout.LayoutBounds="0,0,1,1" BackgroundColor="Silver" CornerRadius="4"/>
                                <Grid RowSpacing="0" ColumnSpacing="0"  AbsoluteLayout.LayoutFlags="All" AbsoluteLayout.LayoutBounds="0.5,0.5,1,.8">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="30"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <ImageButton Grid.Row="0" Grid.Column="0" Source="btn_tranHis.png" Command="{Binding TransHistory}"/>
                                    <Label Grid.Row="1" Grid.Column="0" Text="我的帳簿" TextColor="White" FontSize="Large" HorizontalTextAlignment="Center"/>
                                </Grid>
                            </AbsoluteLayout>
                        </ContentView>
                        
                        <ContentView Grid.Row="0" Grid.Column="1" Margin="6,6,12,12">
                            <AbsoluteLayout>
                                <BoxView AbsoluteLayout.LayoutFlags="All" AbsoluteLayout.LayoutBounds="0,0,1,1" BackgroundColor="Silver" CornerRadius="4"/>
                                <Grid RowSpacing="0" ColumnSpacing="0"  AbsoluteLayout.LayoutFlags="All" AbsoluteLayout.LayoutBounds="0.5,0.5,1,.8">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="30"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <ImageButton Grid.Row="0" Grid.Column="0" Source="btn_coupon.png"/>
                                    <Label Grid.Row="1" Grid.Column="0" Text="使用兌換卷" TextColor="White" FontSize="Large" HorizontalTextAlignment="Center"/>
                                </Grid>
                            </AbsoluteLayout>
                        </ContentView>
                        
                    </Grid>
                    
                </ContentView>
                
            </StackLayout>
            
        </ScrollView>
        
